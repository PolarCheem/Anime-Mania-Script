-- Library

local lib = loadstring(game:HttpGet("https://raw.githubusercontent.com/laagginq/ui-libraries/main/shit-lib/src.lua"))()
local win = lib:Create("Niagra.paid", "Test")
local playertab = win:tab("Player", true)
local cred = win:tab("Credit", false)

-- Locals

local player = game.Players.LocalPlayer
local Char = player.Character or player.CharacterAdded:Wait()
local speed = false
local customSize = 5
local left = Char:FindFirstChild("Left Leg")
local right = Char:FindFirstChild("Right Leg")

-- Functions

local function updateLegs()
    if Char and left and right then
        if speed then
            left.Size = Vector3.new(customSize, 2, customSize)
            right.Size = Vector3.new(customSize, 2, customSize)
        else
            left.Size = Vector3.new(1, 2, 1) 
            right.Size = Vector3.new(1, 2, 1) 
        end
    end
end

local function setupCharacter(character)
    Char = character
    left = Char:FindFirstChild("Left Leg") 
    right = Char:FindFirstChild("Right Leg") 

    updateLegs()
end

player.CharacterAdded:Connect(setupCharacter)

setupCharacter(Char)

-- Set legs to be massless
if left then left.Massless = true end
if right then right.Massless = true end

playertab:label("Made By Ono")

cred:button("Test Button", function()
    print(customSize)
end)

playertab:toggle("Size Test Toggle", false, function(v)
    speed = v  
    updateLegs() 
end)

cred:toggle("Test Toggle2", false, function(v)
    print(v)   
end)

playertab:input("Size Input", "Enter size here...", true, function(v)
    local num = tonumber(v)
    if num then
        customSize = num 
        print("Size set to: " .. customSize)
        updateLegs() 
    else
        print("Invalid input. Please enter a valid number.")
    end
end)

while true do
Char.Physics:Destroy()
wait(0)
end