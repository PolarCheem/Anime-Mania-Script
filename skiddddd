-- UI

local lib = loadstring(game:HttpGet("https://raw.githubusercontent.com/laagginq/ui-libraries/main/shit-lib/src.lua"))()
local win = lib:Create("Niagra.paid", "Test")
local tab1 = win:tab("BigFoot", true)
local creds = win:tab("credits", false)

-- Locals

local player = game.Players.LocalPlayer
local Char = player.Character or player.CharacterAdded:Wait() -- Wait for character if not loaded
local speed = false
local customSpeed = 16

-- Functions

local function speedOn()
    while speed do
        if Char and Char:FindFirstChild("Humanoid") then
            Char.Humanoid.WalkSpeed = 50
        end
        task.wait(0)  
    end
end

-- Library

tab1:label("Made By Ono")

creds:button("Test Button", function()
		print("button")
end)

tab1:toggle("Test Toggle", false, function(v)
    speed = v  
    if speed then
        speedOn()  
    else
        if Char and Char:FindFirstChild("Humanoid") then
            Char.Humanoid.WalkSpeed = 16 
        end
    end
end)

tab1:input("Speed", "Enter speed here...", false, function(v)
    local num = tonumber(v)
    if num then
        customSpeed = num
        print("Speed set to: " .. customSpeed)
    else
        print("Invalid input. Please enter a valid number.")
    end
end)

creds:toggle("Test Toggle2", false, function(v)
    print(v)   
end)
