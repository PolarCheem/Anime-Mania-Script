-- Library
local lib = loadstring(game:HttpGet("https://raw.githubusercontent.com/laagginq/ui-libraries/main/shit-lib/src.lua"))()
local win = lib:Create("Niagra.paid", "TRS")
local playertab = win:tab("Leg", true)
local cred = win:tab("Credit", false)

-- Variables
local distanceThreshold = 1
local distanceThreshold2 = 1
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local leftLeg = character:WaitForChild("Left Leg")
local rightLeg = character:WaitForChild("Right Leg")
local chest = character:WaitForChild("Chest")

-- Locals
local speed = false
local customSize = 5

-- Functions
local function checkProximity()
    while true do
        task.wait(0) 
        for _, part in ipairs(workspace:GetDescendants()) do
            if part:IsA("Part") and part.BrickColor == BrickColor.new("Institutional white") and part.Size == Vector3.new(2.5, 2.5, 2.5) then
                local distanceToLeftLeg = (part.Position - leftLeg.Position).Magnitude
                local distanceToRightLeg = (part.Position - rightLeg.Position).Magnitude

                
                if distanceToLeftLeg <= distanceThreshold then
                    firetouchinterest(leftLeg, part, 0) 
                    firetouchinterest(leftLeg, part, 1) 
                end
                
                if distanceToRightLeg <= distanceThreshold then
                    firetouchinterest(rightLeg, part, 0) 
                    firetouchinterest(rightLeg, part, 1) 
                end
            end
        end
    end
end

local function checkProximity2()
    while true do
        task.wait(0) 
        for _, part in ipairs(workspace:GetDescendants()) do
            if part:IsA("Part") and part.BrickColor == BrickColor.new("Institutional white") and part.Size == Vector3.new(2.5, 2.5, 2.5) then
                local distanceToChest = (part.Position - chest.Position).Magnitude    
                if distanceToChest <= distanceThreshold2 then
                    firetouchinterest(chest, part, 0) 
                    firetouchinterest(chest, part, 1) 
                end
            end
        end
    end
end

local function setupCharacter(character)
    leftLeg = character:FindFirstChild("Left Leg") 
    rightLeg = character:FindFirstChild("Right Leg") 
		chest = character:FindFirstChild("Chest")
end

-- Coding
player.CharacterAdded:Connect(setupCharacter)
setupCharacter(character)

-- UI
playertab:label("Made By Ono")

cred:button("Test Button", function()
    print(customSize)
end)

playertab:toggle("Leg Touch Interest Test", false, function(v)
    speed = v  
end)

playertab:toggle("Leg Touch Interest Test", false, function(v)
    speed = v  
end)

cred:toggle("Test Toggle2", false, function(v)
    print(v)   
end)

playertab:input("Chest Distance Input", "Enter distance here...", true, function(v)
    local num = tonumber(v)
    if num and num > 0 then
        distanceThreshold2 = num 
        print("Distance threshold set to: " .. distanceThreshold2)
    else
        print("Invalid input. Please enter a valid positive number.")
    end
end)

playertab:input("Leg Distance Input", "Enter distance here...", true, function(v)
    local num = tonumber(v)
    if num and num > 0 then
        distanceThreshold = num 
        print("Distance threshold set to: " .. distanceThreshold)
    else
        print("Invalid input. Please enter a valid positive number.")
    end
end)

checkProximity2
checkProximity()

-- AC Bypass
while true do
character.Physics:Destroy()
wait(0)
end