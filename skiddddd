-- Library

local lib = loadstring(game:HttpGet("https://raw.githubusercontent.com/laagginq/ui-libraries/main/shit-lib/src.lua"))()
local win = lib:Create("Niagra.paid", "Test")
local playertab = win:tab("Player", true)
local cred = win:tab("Credit", false)

-- Locals

local player = game.Players.LocalPlayer
local Char = player.Character or player.CharacterAdded:Wait() 
local speed = false
local customSize = 5
local left = Char:FindFirstChild("Left Leg")
local right = Char:FindFirstChild("Right Leg")
local original = left.Size

-- Functions

local function updateLeft()
    if Char and Char:FindFirstChild("Left Leg") then
        if size then
            left.Size = Vector3.new(customSize,customSize,customSize)
        else
            left.Size = Vector3.new(original, original, original)
        end
    end
end

local function updateRight()
    if Char and Char:FindFirstChild("Left Leg") then
        if size then
            right.Size = Vector3.new(customSize,customSize,customSize)
        else
            right.Size = Vector3.new(original, original, original)
        end
    end
end

local function setupCharacter(character)
    Char = character
    updateLeft()  
end

player.CharacterAdded:Connect(setupCharacter)

setupCharacter(Char)

local function setupCharacter2(character)
    Char = character
    updateRight()  
end

player.CharacterAdded:Connect(setupCharacter2)

setupCharacter2(Char)

-- Library

left.Massless = true
right.Massless = true

playertab:label("Made By Ono")

cred:button("Test Button", function()
	print(customSpeed)
end)

playertab:toggle("Speed Test Toggle", false, function(v)
    speed = v  
    updateSize() 
end)

cred:toggle("Test Toggle2", false, function(v)
    print(v)   
end)

playertab:input("Speed Input", "Enter speed here...", true, function(v)
    local num = tonumber(v)
    if num then
        customSize = num 
        print("Size set to: " .. customSpeed)
				updateLeft()
				updateRight()
    else
        print("Invalid input. Please enter a valid number.")
    end
end)
