-- Classic soccer source

if game.PlaceId == 13664698400 then

local lib = loadstring(game:HttpGet("https://raw.githubusercontent.com/laagginq/ui-libraries/main/shit-lib/src.lua"))()
local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local leftLeg = char:WaitForChild("Left Leg")
local rightLeg = char:WaitForChild("Right Leg")
local bigfoot = false
local footSize = Vector3.new(2, 1, 2)
local footTransparency = 0
local footTrans = false

local win = lib:Create("Freemium", "Classic Soccer")
local tab1 = win:tab("Big Foot", true)

local function disableAnti(anti)
    if anti and anti:IsA("LocalScript") then
        anti.Disabled = true
    end
end

local anti1 = char:FindFirstChild("Physics")
local anti2 = player.Backpack:FindFirstChild("Client")
local anti3 = player.Backpack:FindFirstChild("AntiExploitMod")

disableAnti(anti1)
disableAnti(anti2)
disableAnti(anti3)

tab1:toggle("Bigfoot Toggle", false, function(v)
    bigfoot = v
    if bigfoot then
        leftLeg.Size = footSize
        leftLeg.Massless = true
        rightLeg.Size = footSize
        rightLeg.Massless = true
    else
        leftLeg.Size = Vector3.new(1, 2, 1)
        rightLeg.Size = Vector3.new(1, 2, 1)
    end
end)

tab1:toggle("Transparency Toggle", false, function(v)
    footTrans = v
    if footTrans then
        leftLeg.Transparency = footTransparency
        rightLeg.Transparency = footTransparency
    else
        leftLeg.Transparency = 0
        rightLeg.Transparency = 0
    end
end)

tab1:input("Foot Size", "Type Size Here ...", false, function(v)
    local size = tonumber(v)
    if size then
        footSize = Vector3.new(size, 2, size)
        if bigfoot then
            leftLeg.Size = footSize
            rightLeg.Size = footSize
        end
    end
end)

tab1:input("Foot Transparency", "0 - 1 ...", false, function(v)
    local transparency = tonumber(v)
    if transparency then
        footTransparency = transparency
        if footTrans then
            leftLeg.Transparency = footTransparency
            rightLeg.Transparency = footTransparency
        end
    end
end)

end

-- MPS Classic

if game.PlaceId == 18966446930 then

local lib = loadstring(game:HttpGet("https://raw.githubusercontent.com/laagginq/ui-libraries/main/shit-lib/src.lua"))()
local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local leftLeg = char:WaitForChild("Left Leg")
local rightLeg = char:WaitForChild("Right Leg")
local bigfoot = false
local footSize = Vector3.new(2, 1, 2)
local footTransparency = 0
local footTrans = false
local cheat = player.PlayerGui:WaitForChild("LocalScript")

local win = lib:Create("Freemium", "MPS Classic")
local tab1 = win:tab("Leg", true)

tab1:toggle("Bigfoot Toggle", false, function(v)
    bigfoot = v
    if bigfoot then
        leftLeg.Size = footSize
        leftLeg.Massless = true
        rightLeg.Size = footSize
        rightLeg.Massless = true
    else
        leftLeg.Size = Vector3.new(1, 2, 1)
        rightLeg.Size = Vector3.new(1, 2, 1)
    end
end)

tab1:toggle("Transparency Toggle", false, function(v)
    footTrans = v
    if footTrans then
        leftLeg.Transparency = footTransparency
        rightLeg.Transparency = footTransparency
    else
        leftLeg.Transparency = 0
        rightLeg.Transparency = 0
    end
end)

tab1:input("Foot Size", "Type Size Here ...", false, function(v)
    local size = tonumber(v)
    if size then
        footSize = Vector3.new(size, 2, size)
        if bigfoot then
            leftLeg.Size = footSize
            rightLeg.Size = footSize
        end
    end
end)

tab1:input("Foot Transparency", "0 - 1 ...", false, function(v)
    local transparency = tonumber(v)
    if transparency then
        footTransparency = transparency
        if footTrans then
            leftLeg.Transparency = footTransparency
            rightLeg.Transparency = footTransparency
        end
    end
end)

cheat.Disabled = true

end

-- tps street soccer

if game.PlaceId == 335760407 then
-- libary
local lib = loadstring(game:HttpGet("https://raw.githubusercontent.com/laagginq/ui-libraries/main/shit-lib/src.lua"))()
local win = lib:Create("Freemium","TPS Street Soccer")
local tab1 = win:tab("Leg",true)

-- locals
local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local leftLeg = char:WaitForChild("Left Leg") or char:WaitForChild("LeftFoot")
local rightLeg = char:WaitForChild("Right Leg") or char:WaitForChild("RightFoot")
local leftArm = char:WaitForChild("Left Arm") or char:WaitForChild("LeftHand")
local rightArm = char:WaitForChild("Right Arm") or char:WaitForChild("RightHand")
local ball = workspace.TPSSystem.TPS
local LegdistanceThreshold = 1

local legreach = false

local function checkLegs()
    while legreach do
        task.wait(0)
                local distanceToLeftLeg = (ball.Position - leftLeg.Position).Magnitude
                local distanceToRightLeg = (ball.Position - rightLeg.Position).Magnitude

                if distanceToLeftLeg <= LegdistanceThreshold then
                    firetouchinterest(leftLeg, ball, 0) 
                    firetouchinterest(leftLeg, ball, 1) 
                end
                
                if distanceToRightLeg <= distanceThreshold then
                    firetouchinterest(rightLeg, part, 0) 
                    firetouchinterest(rightLeg, part, 1) 
                end
            end
        end
    end

tab1:toggle("Leg Toggle",false,function(v)
legreach = v
checkLegs()
end)

tab1:input("Distance (Legs)", "Enter distance for legs here...", false, function(v)
    local num = tonumber(v)
    if num and num > 0 then
        LegdistanceThreshold = num 
    end
end)

end