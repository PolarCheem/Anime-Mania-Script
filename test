local player = game.CoreGui
local gui = Instance.new("ScreenGui", player)
local button = Instance.new("TextButton", gui)

button.Size = UDim2.new(0, 25, 0, 25)  -- Button size (25x25)
button.Position = UDim2.new(0.5, 0, 0.3, 0)  -- Centered horizontally, adjusted vertically
button.Text = "t"
button.TextScaled = true
button.Draggable = true

button.MouseButton1Click:Connect(function()
    
local args = {
    [1] = Vector3.new(-781.0045776367188, 55.014896392822266, 187.07156372070312),
    [2] = 65,
    [3] = Vector3.new(0.4762641191482544, 0.1204555556178093, 0.8710125684738159),
    [4] = true,
    [5] = true,
    [8] = Vector3.new(-807.5314331054688, 55.77482604980469, 188.7226104736328)
}

game:GetService("ReplicatedStorage").Remotes.ShootBall:FireServer(unpack(args))
wait(0.1)
