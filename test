local player = game.CoreGui
local gui = Instance.new("ScreenGui", player)
local button = Instance.new("TextButton", gui)

button.Size = UDim2.new(0, 25, 0, 25)  -- Button size (25x25)
button.Position = UDim2.new(0.5, 0, 0.3, 0)  -- Centered horizontally, adjusted vertically
button.Text = "⛹️"
button.TextScaled = true
button.Draggable = true

button.MouseButton1Click:Connect(function()
    
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")

-- Offset the ball's position to be 1 stud above and 2 studs in front of the player
local spawnPosition = hrp.Position + Vector3.new(0, 1, 0) + (hrp.CFrame.LookVector * 2)

local args = {
    [1] = spawnPosition,  -- Position the ball 1 unit above and 2 studs in front of the player
    [2] = 20,  -- Power is now 20
    [3] = Vector3.new(-0.3842552602291107, 0.8905673027038574, 0.24338799715042114),
    [4] = false,
    [5] = true,
    [6] = false,
    [7] = false,
    [8] = hrp.Position,  -- Targeting the player's position
    [9] = 0
}

game:GetService("ReplicatedStorage").Remotes.ShootBall:FireServer(unpack(args))


end)
